---
const { title, emoji} = Astro.props
---

<section>
{title && emoji && <h2>{title} <span class="emoji">{emoji}</span></h2>}
<slot></slot>
</section>


<style>
    section{
        max-width: 700px;
        margin:0 auto 36px;
    }

    h2{
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 1.5rem;
    }

    @media print{
        .emoji{
            display: none;
        }
    }
</style>