---
import { basics } from '@/cv.json'
import Section from '@/components/Section.astro'
import Mail from '@/icons/Mail.astro'
import LinkedIn from '@/icons/LinkedIn.astro'
import GitHub from '@/icons/GitHub.astro'
import WorldMap from '@/icons/WorldMap.astro'

const { name, label, image, location, profiles, email  } = basics
const { city, region } = location

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
}

const linkedinInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedInUrl = linkedinInfo?.url.replace('https://','') || "#";
const githubInfo = profiles.find(({ network }) => network === "GitHub");
const githubUrl = githubInfo?.url.replace('https://','') || "#";
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <a href={`https://www.google.com/maps/place/${city}`}
            title="See location on Google Maps"
            target="_blank"
            rel="noopener noreferrer"
            class="location"
            >
                <WorldMap/>
                <span>
                    {city}, {region}
                </span>
            </a>
            <footer class="print">
                    {email} &bull; {linkedInUrl} &bull; {githubUrl}
            </footer>
            <footer class="no-print">
                {
                    email && (
                        <a href={`mailto:${email}`}
                            title={`Send ${name} an email to ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail/>
                        </a>
                    
                    )
                }
                {
                    profiles.map(({ network, url }) => {
                        const Icon = SOCIAL_ICONS[network]
                        return (
                            <a href={url}
                                title={`Visit ${name}'s ${network} profile`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon/>
                            </a>
                        )

                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>

.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 2rem;
}

.info{
    display: flex;
    flex-direction: column;
    gap: .5rem;
    padding: 0 1rem 0  0;
}

.info span{
    display: inline;
}

.info a {
    color:#777;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    transition: all .3s ease;
}

.info a:hover{
    color:#000;
    span{
        color:inherit;
        text-decoration: underline;
    }
}
h1{
    font-size: 2rem;
}

h2{
    color:#444;
    font-family: monospace;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
}

img{
    aspect-ratio: 1/1;
    object-fit: cover;
    width: 128px; 
    border-radius: 100%;  
}

span{
    color:#666;
    display: flex;
    align-items: center;
    gap: .25rem;
    font-size: .85rem;
    letter-spacing: -0.05rem;

}

footer{
    font-size: 0.6rem;
    color:#555;
    display: flex;
    gap: 4px;
    margin-top: 8px;

}

footer a {
    color:#777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all .3s ease;
}

footer a:hover {
    border: 1px solid #ddd;
    background: #f1f1f1;
}

.print{
    display: none;
}

@media print {
    .print{
        display: block;
    }

    .no-print{
        display: none;
    }
}

</style>