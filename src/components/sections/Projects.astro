---
import Section from '@/components/Section.astro'

import { projects } from '@cv'
---

<Section title="Projects">

    <ul>
        {
            projects.map(({name, description, url, role, stack,isActive}) => {
                

                return(
                    <li >
                        <article>
                            <header>
                                <a href={url} target="_blank" rel="noopener noreferrer" title={`See ${name} project`}>
                                  {name}
                                </a>
                                {isActive && <span>&bull;</span>}
                                <p>{description}</p>
                            </header>
                            <footer>
                                <span>{role}</span>
                                {stack.map((tech) => {
                                    return <span>{tech}</span>
                                })}
                            </footer>
                        </article>
                    </li>
                )
            })
               
        
        }
    </ul>

</Section>

<style>
    ul{
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap:1rem;
    }

    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap:16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;

        header{
            flex:1;
        }

        a{
            display: inline-flex;
            text-decoration: none;
            color: #333;
            margin-bottom: 5px;
        }

        a:hover{
            text-decoration: underline;
        }

        p{
            font-size: .7rem;
            line-height: 1.2rem;
        }


    }

    header span{
        color: #00ff00;
    }

    footer{
        display: flex;
        flex-wrap: wrap;
        gap:4px;

        span{
            border-radius: 6px;
            background:#eee;
            color:#333;
            font-size: .6rem;
            font-weight: 500;
            padding: .2rem .6rem;
        
        }
    }

</style>